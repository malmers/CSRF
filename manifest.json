{
  "manifest_version": 2,
  "name": "CSRF",
  "version": "1.0",

  "description": "CSRF hunter",

  "icons": {
    "48": "icons/csrf.svg",
    "96": "icons/csrf.svg"
  },

  "permissions": [
    "activeTab"
  ],

  "browser_action": {
    "default_icon": "icons/csrf.svg",
    "default_title": "CSRF hunter",
    "default_popup": "popup/popup.html"
  },

  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "run_at": "document_end",
      "js": ["csrf.js"]
    }
  ],

  "background": {
    "scripts": ["background.js"]
  }
}